$fs = fs;
fluidfs($fsmin=16px, $fsmax=32px, $wmin=320px, $wmax=2500px) {
  a = unit($fsmin/$fs, em)
  b = unit($fsmax - $fsmin, '')
  c = $wmin
  d = unit($wmax - $wmin, '')
  
  @media (min-width:$wmin) {
    font-size:"calc(%s + %s * (100vw - %s) / %s)" % (a b c d)
  }
}
:root {font-size:$fs;}
