glass() {
  position:relative;
  &:after {content:""; position:absolute;left:0;right:0;top:0;bottom:0;}
}

vcenter() {
  height:100%; white-space:nowrap;word-spacing:-.25em;
  &:before {content:"";display:inline-block;vertical-align:middle; width:0;height:100%;}
  >* {display:inline-block;vertical-align:middle; white-space:normal;word-spacing:normal;}
}    
