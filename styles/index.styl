// nearestMultiple(11.4 / 5) * 5 => 15
nearestMultiple(i, j) {
  // http://stackoverflow.com/questions/9280847/round-a-variable-up-to-the-next-closest-multiple-of-x
  return unit(ceil(unit(i, '') / unit(j, '')) * unit(j, ''), unit(i));
}

